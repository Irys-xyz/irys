	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'irys-chain'",
			"cargo": {
				"args": [
					"build",
					"--bin=irys",
					"--package=irys-chain"
				],
				"filter": {
					"name": "irys",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}",
			"env": {
				"RUST_BACKTRACE": "1",
				"RUST_LOG": "irys_actors::block_tree_service=debug,irys_chain::chain=debug,irys_actors::vdf_service=debug,irys_actors::broadcast_mining_service=debug,irys_actors::mining=debug,irys_actors::block_producer=debug"
			}
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'irys-chain'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=irys",
					"--package=irys-chain"
				],
				"filter": {
					"name": "irys-chain",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'api_server'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=api-server"
				],
				"filter": {
					"name": "api_server",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'irys_types'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=irys-types"
				],
				"filter": {
					"name": "irys_types",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'irys_primitives'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=irys-primitives"
				],
				"filter": {
					"name": "irys_primitives",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}