	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'chain'",
			"cargo": {
				"args": [
					"build",
					"--bin=irys",
					"--package=chain"
				],
				"filter": {
					"name": "irys",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'chain'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=irys",
					"--package=chain"
				],
				"filter": {
					"name": "chain",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'api_server'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=api-server"
				],
				"filter": {
					"name": "api_server",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'irys_types'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=irys-types"
				],
				"filter": {
					"name": "irys_types",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'irys_primitives'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=irys-primitives"
				],
				"filter": {
					"name": "irys_primitives",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}