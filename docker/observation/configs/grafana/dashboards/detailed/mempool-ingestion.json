{
  "title": "Mempool & Data Ingestion",
  "uid": "irys-mempool-ingestion-detailed",
  "tags": [
    "irys",
    "mempool",
    "ingestion",
    "api"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "node",
        "label": "Node",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(irys_mempool_pending_chunks, job)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [],
        "sort": 1,
        "regex": ""
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Mempool Status",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "Pending Chunks",
      "description": "Chunks waiting in mempool",
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum(irys_mempool_pending_chunks{job=~\"$node\"})",
          "legendFormat": "pending",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 1000
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Pending Data Txs",
      "description": "Data transactions waiting in mempool",
      "gridPos": {
        "x": 6,
        "y": 1,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum(irys_mempool_pending_data_txs{job=~\"$node\"})",
          "legendFormat": "pending",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "API Chunks/s",
      "description": "Current API chunk ingestion rate",
      "gridPos": {
        "x": 12,
        "y": 1,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum(rate(irys_api_chunks_received_total{job=~\"$node\"}[1m]))",
          "legendFormat": "chunks/s",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 1,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Unfunded Txs",
      "description": "Data txs rejected as unfunded",
      "gridPos": {
        "x": 18,
        "y": 1,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum(increase(irys_mempool_data_tx_unfunded_total{job=~\"$node\"}[$__range]))",
          "legendFormat": "unfunded",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "API Ingestion",
      "gridPos": {
        "x": 0,
        "y": 5,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "API Chunks Received Rate",
      "description": "Rate of chunks received via API",
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_api_chunks_received_total{job=~\"$node\"}[1m])",
          "legendFormat": "{{job}} chunks/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "API Bytes Throughput",
      "description": "Bytes received via API",
      "gridPos": {
        "x": 12,
        "y": 6,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_api_chunks_bytes_received_total{job=~\"$node\"}[1m])",
          "legendFormat": "{{job}} bytes/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "API Chunk Errors by Type",
      "description": "API chunk errors broken down by type",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum by (error_type) (rate(irys_api_chunks_errors_total{job=~\"$node\"}[$__rate_interval]))",
          "legendFormat": "{{error_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "stacking": {
              "mode": "normal"
            }
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Chunk Ingress Latency (p50, p95, p99)",
      "description": "Chunk processing latency from spanmetrics",
      "gridPos": {
        "x": 12,
        "y": 12,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "histogram_quantile(0.50, sum by (le, service_name) (rate(traces_span_metrics_duration_milliseconds_bucket{job=~\"$node\", span_name=\"handle_chunk_ingress_message\"}[$__rate_interval])))",
          "legendFormat": "{{service_name}} p50",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "histogram_quantile(0.95, sum by (le, service_name) (rate(traces_span_metrics_duration_milliseconds_bucket{job=~\"$node\", span_name=\"handle_chunk_ingress_message\"}[$__rate_interval])))",
          "legendFormat": "{{service_name}} p95",
          "refId": "B"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "histogram_quantile(0.99, sum by (le, service_name) (rate(traces_span_metrics_duration_milliseconds_bucket{job=~\"$node\", span_name=\"handle_chunk_ingress_message\"}[$__rate_interval])))",
          "legendFormat": "{{service_name}} p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Mempool Processing",
      "gridPos": {
        "x": 0,
        "y": 18,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Pending Chunks Over Time",
      "description": "Mempool pending chunks gauge",
      "gridPos": {
        "x": 0,
        "y": 19,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "irys_mempool_pending_chunks{job=~\"$node\"}",
          "legendFormat": "{{job}} pending chunks",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Pending Data Txs Over Time",
      "description": "Mempool pending data transactions gauge",
      "gridPos": {
        "x": 12,
        "y": 19,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "irys_mempool_pending_data_txs{job=~\"$node\"}",
          "legendFormat": "{{job}} pending txs",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Mempool Chunk Ingestion Rate",
      "description": "Rate of chunks ingested into mempool",
      "gridPos": {
        "x": 0,
        "y": 25,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_mempool_chunks_ingested_total{job=~\"$node\"}[1m])",
          "legendFormat": "{{job}} ingested/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Mempool Bytes Ingested",
      "description": "Bytes ingested into mempool",
      "gridPos": {
        "x": 8,
        "y": 25,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_mempool_chunks_bytes_ingested_total{job=~\"$node\"}[1m])",
          "legendFormat": "{{job}} bytes/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Mempool Duplicates & Errors",
      "description": "Duplicate chunks and errors in mempool",
      "gridPos": {
        "x": 16,
        "y": 25,
        "w": 8,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum(rate(irys_mempool_chunks_duplicates_total{job=~\"$node\"}[1m]))",
          "legendFormat": "duplicates",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum by (job, error_type) (rate(irys_mempool_chunks_errors_total{job=~\"$node\"}[1m]))",
          "legendFormat": "{{job}} {{error_type}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Data Transactions",
      "gridPos": {
        "x": 0,
        "y": 31,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Data Tx Ingested Rate",
      "description": "Rate of data transactions ingested",
      "gridPos": {
        "x": 0,
        "y": 32,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_mempool_data_tx_ingested_total{job=~\"$node\"}[$__rate_interval])",
          "legendFormat": "{{job}} ingested/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Data Tx Unfunded Rate",
      "description": "Rate of unfunded data transactions rejected",
      "gridPos": {
        "x": 12,
        "y": 32,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_mempool_data_tx_unfunded_total{job=~\"$node\"}[$__rate_interval])",
          "legendFormat": "{{job}} unfunded/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
