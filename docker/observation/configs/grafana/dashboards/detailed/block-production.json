{
  "title": "Block Production & Progression",
  "uid": "irys-block-production-detailed",
  "tags": [
    "irys",
    "blocks",
    "production"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 3,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "node",
        "label": "Node",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(irys_chain_block_height, job)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [],
        "sort": 1,
        "regex": ""
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Block Status",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "Block Height",
      "description": "Current block height",
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 5,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "max(irys_chain_block_height{job=~\"$node\"})",
          "legendFormat": "max",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Canonical Tip",
      "description": "Canonical tip height from block tree",
      "gridPos": {
        "x": 5,
        "y": 1,
        "w": 5,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "max(irys_block_tree_canonical_tip_height{job=~\"$node\"})",
          "legendFormat": "max",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Reth FCU Head",
      "description": "Reth FCU head block height",
      "gridPos": {
        "x": 10,
        "y": 1,
        "w": 5,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "max(irys_reth_fcu_head_height{job=~\"$node\"})",
          "legendFormat": "max",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Blocks Produced",
      "description": "Total blocks produced",
      "gridPos": {
        "x": 15,
        "y": 1,
        "w": 5,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "irys_block_producer_blocks_produced_total{job=~\"$node\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Reorgs",
      "description": "Chain reorg events",
      "gridPos": {
        "x": 20,
        "y": 1,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "irys_block_tree_reorgs_total{job=~\"$node\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Block Heights Over Time",
      "gridPos": {
        "x": 0,
        "y": 5,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Block Height Progression",
      "description": "Chain height, canonical tip, and Reth FCU head over time",
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "irys_chain_block_height{job=~\"$node\"}",
          "legendFormat": "{{job}} chain height",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "irys_block_tree_canonical_tip_height{job=~\"$node\"}",
          "legendFormat": "{{job}} canonical tip",
          "refId": "B"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "irys_reth_fcu_head_height{job=~\"$node\"}",
          "legendFormat": "{{job}} reth FCU head",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Block Production Activity",
      "gridPos": {
        "x": 0,
        "y": 14,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Blocks Produced Rate",
      "description": "Rate of blocks produced per second",
      "gridPos": {
        "x": 0,
        "y": 15,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_block_producer_blocks_produced_total{job=~\"$node\"}[$__rate_interval])",
          "legendFormat": "{{job}} blocks/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Block Producer Retries & Rebuilds",
      "description": "Retry attempts and parent-changed rebuilds",
      "gridPos": {
        "x": 12,
        "y": 15,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_block_producer_retry_attempts_total{job=~\"$node\"}[$__rate_interval])",
          "legendFormat": "{{job}} retries",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(irys_block_producer_rebuilds_total{job=~\"$node\"}[$__rate_interval])",
          "legendFormat": "{{job}} rebuilds",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Reorg Events",
      "description": "Chain reorganization events over time",
      "gridPos": {
        "x": 0,
        "y": 21,
        "w": 24,
        "h": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "increase(irys_block_tree_reorgs_total{job=~\"$node\"}[$__rate_interval])",
          "legendFormat": "{{job}} reorgs",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 1
          }
        }
      }
    }
  ]
}
