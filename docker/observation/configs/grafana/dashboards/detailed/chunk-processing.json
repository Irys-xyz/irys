{
  "title": "Chunk Processing",
  "uid": "irys-chunk-processing-detailed",
  "tags": ["irys", "chunks", "ingestion", "gossip"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "node",
        "label": "Node",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(irys_node_up, job)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [],
        "sort": 1,
        "regex": ""
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "Total Chunks",
      "description": "Cumulative chunks received via API + Gossip",
      "gridPos": { "x": 0, "y": 1, "w": 8, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(irys_api_chunks_received_total{job=~\"$node\"} or vector(0)) + sum(irys_gossip_chunks_received_total{job=~\"$node\"} or vector(0))",
          "legendFormat": "total",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Bytes",
      "description": "Cumulative bytes received via API + Gossip",
      "gridPos": { "x": 8, "y": 1, "w": 8, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(irys_api_chunks_bytes_received_total{job=~\"$node\"} or vector(0)) + sum(irys_gossip_chunks_bytes_received_total{job=~\"$node\"} or vector(0))",
          "legendFormat": "bytes",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Chunk Error Rate",
      "description": "Errors per second (API + Gossip)",
      "gridPos": { "x": 16, "y": 1, "w": 8, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(irys_api_chunks_errors_total{job=~\"$node\"}[$__rate_interval]) or vector(0)) + sum(rate(irys_gossip_chunks_errors_total{job=~\"$node\"}[$__rate_interval]) or vector(0))",
          "legendFormat": "errors/s",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Duplicate Rate",
      "description": "Mempool duplicate chunk rate",
      "gridPos": { "x": 0, "y": 5, "w": 8, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "100 * sum(rate(irys_mempool_chunks_duplicates_total{job=~\"$node\"}[$__rate_interval])) / clamp_min(sum(rate(irys_mempool_chunks_ingested_total{job=~\"$node\"}[$__rate_interval])) + sum(rate(irys_mempool_chunks_duplicates_total{job=~\"$node\"}[$__rate_interval])), 1)",
          "legendFormat": "dup %",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Processing Latency (p50)",
      "description": "Median chunk processing time (API + Gossip ingress)",
      "gridPos": { "x": 8, "y": 5, "w": 8, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.50, sum by (le) (rate(traces_span_metrics_duration_milliseconds_bucket{job=~\"$node\", span_name=~\"POST /v1/chunk|POST /gossip/v2/chunk\"}[$__rate_interval])))",
          "legendFormat": "p50",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
