{
  "title": "Irys Nodes",
  "uid": "irys-nodes",
  "tags": ["irys", "nodes", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "node",
        "label": "Node",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(irys_api_chunks_received_total, service_name)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [],
        "sort": 1,
        "regex": ""
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "Total Chunks",
      "description": "Cumulative chunks received via API + Gossip",
      "gridPos": { "x": 0, "y": 1, "w": 4, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(irys_api_chunks_received_total{service_name=~\"$node\"} or vector(0)) + sum(irys_gossip_chunks_received_total{service_name=~\"$node\"} or vector(0))",
          "legendFormat": "total",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Bytes",
      "description": "Cumulative bytes received via API + Gossip",
      "gridPos": { "x": 4, "y": 1, "w": 4, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(irys_api_chunks_bytes_received_total{service_name=~\"$node\"} or vector(0)) + sum(irys_gossip_chunks_bytes_received_total{service_name=~\"$node\"} or vector(0))",
          "legendFormat": "bytes",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Chunk Error Rate",
      "description": "Errors per second (API + Gossip)",
      "gridPos": { "x": 8, "y": 1, "w": 4, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(irys_api_chunks_errors_total{service_name=~\"$node\"}[5m])) + sum(rate(irys_gossip_chunks_errors_total{service_name=~\"$node\"}[5m]))",
          "legendFormat": "errors/s",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Duplicate Rate",
      "description": "Mempool duplicate chunk rate",
      "gridPos": { "x": 12, "y": 1, "w": 4, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "100 * sum(rate(irys_mempool_chunks_duplicates_total{service_name=~\"$node\"}[5m])) / clamp_min(sum(rate(irys_mempool_chunks_ingested_total{service_name=~\"$node\"}[5m])) + sum(rate(irys_mempool_chunks_duplicates_total{service_name=~\"$node\"}[5m])), 1)",
          "legendFormat": "dup %",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Processing Latency (p50)",
      "description": "Median chunk processing time (API + Gossip)",
      "gridPos": { "x": 16, "y": 1, "w": 4, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.50, sum by (le) (rate(span_metrics_duration_milliseconds_bucket{service_name=~\"$node\", span_name=\"handle_chunk_ingress\"}[5m])))",
          "legendFormat": "p50",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Chunks/sec",
      "description": "Current throughput (API + Gossip)",
      "gridPos": { "x": 20, "y": 1, "w": 4, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(irys_api_chunks_received_total{service_name=~\"$node\"}[1m])) + sum(rate(irys_gossip_chunks_received_total{service_name=~\"$node\"}[1m]))",
          "legendFormat": "chunks/s",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Error Count",
      "gridPos": { "x": 0, "y": 5, "w": 6, "h": 4 },
      "targets": [
        {
          "datasource": { "type": "elasticsearch", "uid": "elasticsearch" },
          "query": "service.name.keyword: $node AND log.level: ERROR",
          "metrics": [{ "type": "count", "id": "1" }],
          "bucketAggs": [
            { "type": "date_histogram", "field": "@timestamp", "id": "2", "settings": { "interval": "auto", "min_doc_count": "0" } }
          ],
          "timeField": "@timestamp",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["sum"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
