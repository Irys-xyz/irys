          "bucketAggs": [
            { "type": "terms", "field": "service.name.keyword", "id": "3", "settings": { "size": "10", "order": "desc", "orderBy": "_count", "min_doc_count": "1" } },
            { "type": "date_histogram", "field": "@timestamp", "id": "2", "settings": { "interval": "auto", "min_doc_count": "0", "trimEdges": "0" } }
