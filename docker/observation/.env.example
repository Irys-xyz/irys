# Observability Stack Configuration
# Copy this file to .env and customize as needed

# Grafana Configuration
GRAFANA_PORT=3000
# Bind to localhost only (secure default). Use 0.0.0.0 to expose externally.
GRAFANA_BIND_HOST=127.0.0.1
# Enable anonymous viewer access (false for security)
GRAFANA_ANON_ENABLED=false
GRAFANA_ADMIN_USER=admin
# ⚠️ CHANGE THIS IN PRODUCTION!
GRAFANA_ADMIN_PASSWORD=admin

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=7d

# Tempo Configuration
TEMPO_PORT=3200

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
ES_JAVA_OPTS=-Xms512m -Xmx512m
ES_CLUSTER_NAME=observation-cluster

# OpenTelemetry Collector Configuration
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318

# Data Retention
LOG_RETENTION_DAYS=7
ES_REPLICAS=0
